{
  "app-id": "io.github.Hexchat",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "sdk": "org.gnome.Sdk",
  "command": "hexchat",
  "rename-icon": "hexchat",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=session-bus",
    "--share=network"
  ],
  "modules": [
    {
      "name": "hexchat",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "--buildtype=release",
        "-Ddbus-service-use-appid=true",
        "-Dwith-perl=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/hexchat/hexchat.git"
        }
      ],
      "modules": [
        "org.luajit.Luajit.json",
        {
          "name": "lgi",
          "no-autogen": true,
          "build-options": {
            "cflags": "-O2",
            "env": {
              "LUA_CFLAGS": "-I/app/include/luajit-2.1"
            }
          },
          "sources": [
            {
              "type": "git",
              "url": "https://github.com/pavouk/lgi.git",
              "commit": "93eab44ce1e9dcad388546b765c020dec880df3f"
            },
            {
              "type": "shell",
              "commands": [ "sed -i 's|/usr/local|/app|' ./lgi/Makefile" ]
            }
          ]
        }
      ]
    }
  ]
}
